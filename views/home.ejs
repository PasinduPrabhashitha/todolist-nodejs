<%- include('./partials/header') %>
<body>
    <div class="container">
      <!-- Current Date Indicator -->
      <div class="date">
        <h4 class="date-text"> <%= date %> <%= month %> </h4>
      </div>
      <!-- Day -->
      <h5 class="main-heading"><%= day %></h5>
      <!-- Item Indicate -->
      
      <% toDos.forEach((toDoItem) => { %>
        <form method="POST" action="/delete" class="list-item">
          <input type="checkbox" onchange="this.form.submit()" value=<%= toDoItem %> name="current_item" />
          <p> <%= toDoItem %></p>
        </form>
        <% }); %>
      
      
      <div class="input-area">
        <form method="POST" action="/" class="input-item">
          <input class="text-input" type="text" name="newItem" autocomplete="off" />
          <button class="submit-button" type="submit">Add</button>
        </form>
      </div>
    </div>
  </body>
</html>